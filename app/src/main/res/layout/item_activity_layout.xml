<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/dp_2">

        <com.expirydatereminder.Custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/dp_4"
            android:text="@string/mdi_cart_plus"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_35"
            app:custom_font="materialdesignicons.ttf" />

        <TextView
            android:id="@+id/nameOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:text="ᴀᴅᴅ ɪᴛᴇᴍ"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:custom_font="materialdesignicons.ttf" />


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingStart="3dp"
        android:text="Item Name"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/name_dialog_box_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/edittext_bg"
        android:hint="Item Name"
        android:padding="@dimen/dp_6"
        android:textSize="@dimen/dp_16" />


    <TextView
        android:id="@+id/expiryDate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="3dp"
        android:text="Expiry Date"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/date_dialog_box_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/edittext_bg"
        android:hint="DD (Default: Last day of month)"
        android:inputType="number"
        android:padding="@dimen/dp_6"
        android:textSize="@dimen/dp_16"
        android:visibility="visible" />

    <EditText
        android:id="@+id/month_dialog_box_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/edittext_bg"
        android:hint="MM"
        android:inputType="number"
        android:padding="@dimen/dp_6"
        android:textSize="@dimen/dp_16"
        android:visibility="visible">

    </EditText>

    <EditText
        android:id="@+id/year_dialog_box_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/edittext_bg"
        android:hint="YYYY (Default: Current year)"
        android:inputType="number"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/dp_16"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/category_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_category_selector_add_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg" />


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/black" />

</LinearLayout>
