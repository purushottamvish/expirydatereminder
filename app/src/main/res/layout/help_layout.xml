<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_2">

        <com.expirydatereminder.Custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/dp_4"
            android:text="@string/mdi_help_box"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_35"
            app:custom_font="materialdesignicons.ttf" />

        <TextView
            android:id="@+id/nameOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:text="ʜᴇʟᴘ"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"

            app:custom_font="materialdesignicons.ttf" />/>


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@color/gray_help"
        android:padding="4dp">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:foreground="@drawable/black_add_circle_24"
            app:borderWidth="0dp"
            app:elevation="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:text="Add a new item"
            android:textColor="#000000"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/gray_help"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:backgroundTint="@color/white"
            android:clickable="false"

            android:foreground="@drawable/black_refresh_24"
            app:borderWidth="0dp"
            app:elevation="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:text="Refresh category &amp; item lists"
            android:textColor="#000000"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@color/gray_help"
        android:orientation="horizontal"
        android:padding="4dp">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:foreground="@drawable/black_settings_24"
            app:borderWidth="0dp"
            app:elevation="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Add new categories, delete user-defined categories and select date format"
            android:textColor="#000000"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_3"
        android:layout_marginTop="20dp"
        android:background="@color/gray_help"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To delete an item or a category (including all items under it), long press and hold."
            android:textColor="@color/md_blue_600"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/black" />


</LinearLayout>
